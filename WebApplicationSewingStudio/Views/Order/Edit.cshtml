@model WebApplicationSewingStudio.ViewModels.OrdersViewModels.OrdersViewModel

@{
    ViewData["Title"] = "Редактирование заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование</h2>

<h4>Заказ</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orders.First().Id" />
            <div class="form-group">
                <label asp-for="Orders.First().Product.Name" class="control-label"></label>
                <select asp-for="Orders.First().Product.Name" class="form-control" asp-items="Model.ProductsList"></select>
                <span asp-validation-for="Orders.First().Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.First().Price" class="control-label"></label>
                <input asp-for="Orders.First().Price" class="form-control" />
                <span asp-validation-for="Orders.First().Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.First().Quantity" class="control-label"></label>
                <input asp-for="Orders.First().Quantity" class="form-control" />
                <span asp-validation-for="Orders.First().Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.First().Date_of_order" class="control-label"></label>
                <input asp-for="Orders.First().Date_of_order" class="form-control" />
                <span asp-validation-for="Orders.First().Date_of_order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.First().Date_of_sale" class="control-label"></label>
                <input asp-for="Orders.First().Date_of_sale" class="form-control" />
                <span asp-validation-for="Orders.First().Date_of_sale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

